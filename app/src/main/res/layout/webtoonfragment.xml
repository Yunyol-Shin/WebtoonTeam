<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:text="Mon"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button1x"
            android:background="@drawable/button_round"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:text="Tue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button2x"
            android:background="@drawable/button_round"
            android:layout_below="@+id/button1x"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp" />

        <Button
            android:text="Wen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button3x"
            android:background="@drawable/button_round"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button2x"
            />

        <Button
            android:text="Thu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button4x"
            android:background="@drawable/button_round"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button3x"
            />

        <Button
            android:text="Fri"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button5x"
            android:background="@drawable/button_round"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button4x"/>

        <Button
            android:text="Sat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button6x"
            android:background="@drawable/button_round"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button5x" />

        <Button
            android:text="Sun"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button7x"
            android:background="@drawable/button_round"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/button6x" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        />

</LinearLayout>
